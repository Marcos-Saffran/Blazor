@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-secondary" @onclick="() => currentCount = 0">Reiniciar</button>

@if (currentCount > 3)
{
    <p>You have clicked more than 3 times!</p>
}

<ul>
    @foreach (var message in messages){
        <li>@message</li>
    }
</ul>

@* <input @onchange="InputChanged" @onkeypress="InputKeyPressed" />
<p>@message</p> *@

<input @bind="texto" />
<button @onclick="() => texto = string.Empty">Clear</button>
<p>@texto</p>

@code {
    private int currentCount = 0;

    private string[] messages = new[] { "First", "Second", "Third" };

    string message = "";
    string texto = "";

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void InputChanged(ChangeEventArgs e)
    {
        message = (string)e.Value;
    }

    @* private void InputKeyPressed(KeyboardEventArgs e)
    {
        // if key is number, append to message
        if (char.IsDigit((char)e.Key[0]) || char.IsLetter((char)e.Key[0]))
        {
            message += e.Key;
        }
    } *@
}
